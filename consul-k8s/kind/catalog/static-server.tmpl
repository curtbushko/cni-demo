apiVersion: v1
kind: Service
metadata:
  # This name will be the service name in Consul.
  name: static-server-NUMBER
spec:
  selector:
    app: static-server-NUMBER
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: static-server-NUMBER
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: static-server-NUMBER
spec:
  replicas: 1
  selector:
    matchLabels:
      app: static-server-NUMBER
  template:
    metadata:
      name: static-server-NUMBER
      labels:
        app: static-server-NUMBER
      annotations:
        'consul.hashicorp.com/connect-inject': 'true'
    spec:
      nodeSelector:
        app: static-NUMBER
      containers:
        - name: static-server
          image: docker.mirror.hashicorp.services/hashicorp/http-echo:alpine
          args:
            - -text="hello world"
            - -listen=:8080
          ports:
            - containerPort: 8080
              name: http
      # If ACLs are enabled, the serviceAccountName must match the Consul service name.
      serviceAccountName: static-server-NUMBER
